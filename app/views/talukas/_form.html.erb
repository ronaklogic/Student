<%= form_with model: @taluka, remote: true do |form| %>
  
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %><br>
  </div>

  <div class="field">
    <%= form.label :state_name %>
    <%= form.select :state_id, State.all.map{ |p| [p.state_name, p.id] } %><br>
  </div>

  <div class="field">
    <%= form.label :district_name %>  
    <%= form.select :district_id, District.all.map{ |p| [p.district_name, p.id] } %><br>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
